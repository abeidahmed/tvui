{{#if @isActive}}
  <div
    id={{@menuId}}
    role="menu"
    class="absolute top-100 w-48 bg-white shadow-lg right-0 border rounded p-1 mt-1 focus:outline-none"
    aria-labelledby={{@buttonId}}
    aria-activedescendant={{@activeItem.item.id}}
    ...attributes
    tabindex="-1"
    {{on "keydown" this.onKeydown}}
    {{focus-trap options=(hash
      allowOutsideClick=this.allowClickOutsideFocusTrap
      clickOutsideDeactivates=this.clickOutsideFocusTrapDeactivates
      initialFocus=(concat "#" @menuId)
      fallbackFocus=(concat "#" @menuId)
      onDeactivate=@reset
    )}}
  >
    {{yield (hash
      Item=(component
        "dropdown/menu-item"
        registerItem=@registerItem
        unregisterItem=@unregisterItem
        setActiveItem=@setActiveItem
        closeMenu=@closeMenu
      )
    )}}
  </div>
{{/if}}

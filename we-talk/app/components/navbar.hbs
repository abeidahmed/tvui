<header class="flex-shrink-0 bg-white flex items-center justify-between border-b h-12 px-4 sm:px-5 lg:px-6">
  <div>
    <LinkTo @route="index">
      <img
        src="https://ambiki.com/assets/ambiki-logo-only-ff0a2c351b55e90dbb93a73b2ecb55c520fc8531993b6f2024022bb96ee9d1bd.png"
        alt="We talk"
        class="h-8 w-full"
      >
    </LinkTo>
  </div>

  <nav class="flex items-center space-x-1">
    <button
      type="button"
      class="inline-flex items-center p-1 rounded text-muted hover:bg-gray-200 hover:text-default focus-visible:outline-none focus-visible:bg-gray-200 focus-visible:text-default"
      aria-label="New appointment"
    >
      {{svg-jar "plus" class="h-5 w-5" fill="currentColor"}}
    </button>

    <Dropdown class="relative" as |dropdown|>
      <dropdown.Button
        class="inline-flex items-center p-1 rounded text-muted hover:bg-gray-200 hover:text-default focus-visible:outline-none focus-visible:bg-gray-200 focus-visible:text-default"
        aria-label="User menu"
      >
        <img
          src="https://avatars.githubusercontent.com/u/50948617?s=40&v=4"
          alt="Abeid Ahmed"
          class="h-5 w-5 rounded-full"
        >
        {{svg-jar "arrow-dropdown" class="h-5 w-5" fill="currentColor"}}
      </dropdown.Button>

      <dropdown.Menu as |menu|>
        <div class="px-2">
          <p class="text-subtle">Signed in as</p>
          <p>Abeid Ahmed</p>
        </div>
        <hr class="my-2">

        <menu.Item href="#">Your profile</menu.Item>
        <menu.Item href="#">Your appointments</menu.Item>

        <hr class="my-2">

        <menu.Item href="#">Sign out</menu.Item>
      </dropdown.Menu>
    </Dropdown>
  </nav>
</header>

{{page-title "Appointments"}}

<div class="flex flex-col bg-gray-100 min-h-screen">
  <header class="flex-shrink-0 bg-white flex items-center justify-between border-b h-12 px-4 sm:px-5 lg:px-6">
    <div>
      <LinkTo @route="index">
        <img
          src="https://ambiki.com/assets/ambiki-logo-only-ff0a2c351b55e90dbb93a73b2ecb55c520fc8531993b6f2024022bb96ee9d1bd.png"
          alt="We talk"
          class="h-8 w-full"
        >
      </LinkTo>
    </div>

    <nav class="flex items-center space-x-1">
      <button
        type="button"
        class="inline-flex items-center p-1 rounded text-gray-700 hover:bg-gray-200 hover:text-gray-900 focus-visible:outline-none focus-visible:bg-gray-200 focus-visible:text-gray-900"
        aria-label="New appointment"
      >
        {{svg-jar "plus" class="h-5 w-5" fill="currentColor"}}
      </button>

      <button
        type="button"
        class="inline-flex items-center p-1 rounded text-gray-700 hover:bg-gray-200 hover:text-gray-900 focus-visible:outline-none focus-visible:bg-gray-200 focus-visible:text-gray-900"
        aria-label="User menu"
      >
        <img
          src="https://avatars.githubusercontent.com/u/50948617?s=40&v=4"
          alt="Abeid Ahmed"
          class="h-5 w-5 rounded-full"
        >
        {{svg-jar "arrow-dropdown" class="h-5 w-5" fill="currentColor"}}
      </button>
    </nav>
  </header>

  <main class="flex-1 flex px-4 py-5 max-w-5xl w-full mx-auto sm:px-5 lg:px-6">
    <section class="w-80 border-r pr-4">
      <h2 class="text-base">Calendar</h2>
    </section>

    <section class="flex-1 pl-4">
      <h2 class="text-base">Appointments</h2>

      <nav class="mt-3 flex items-center space-x-3">
        <a href="#" class="text-blue-700">All appointments</a>
        <a href="#" class="text-gray-600 hover:text-gray-900">Upcoming</a>
        <a href="#" class="text-gray-600 hover:text-gray-900">Recent</a>
      </nav>

      <hr class="my-4">

      <section class="mt-4 flex flex-col space-y-3">
        <div class="bg-white border rounded-md p-4 shadow-sm">
          <div class="flex justify-between">
            <div>
              <span class="font-semibold">Dec 21, 2022</span>
              <div class="text-xs text-gray-700 mt-1">
                <time datetime="">05:00</time>
                <span>-</span>
                <time datetime="">05:30</time>
              </div>
            </div>

            <div class="flex items-center space-x-2">
              <button type="button" class="inline-flex align-items-center py-1 px-3 text-sm rounded-md border border-blue-500 shadow bg-blue-500 text-white font-medium hover:bg-blue-600 transition duration-150 active:bg-blue-700 focus-visible:outline-none focus-visible:ring-2 focus-visible-ring-blue-600">
                Start
              </button>

              <button
                type="button"
                class="inline-flex items-center p-1 border rounded text-gray-700 hover:bg-gray-200 hover:text-gray-900 focus-visible:outline-none focus-visible:bg-gray-200 focus-visible:text-gray-900"
              >
                {{svg-jar "more" class="h-5 w-5" fill="currentColor"}}
              </button>
            </div>
          </div>
        </div>

        <div class="bg-white border rounded-md p-4 shadow-sm">
          <div class="flex justify-between">
            <div>
              <span class="font-semibold">Dec 21, 2022</span>
              <div class="text-xs text-gray-700 mt-1">
                <time datetime="">05:00</time>
                <span>-</span>
                <time datetime="">05:30</time>
              </div>
            </div>

            <div class="flex items-center space-x-2">
              <button type="button" class="inline-flex align-items-center py-1 px-3 text-sm rounded-md border border-blue-500 shadow bg-blue-500 text-white font-medium hover:bg-blue-600 transition duration-150 active:bg-blue-700 focus-visible:outline-none focus-visible:ring-2 focus-visible-ring-blue-600">
                Start
              </button>

              <button
                type="button"
                class="inline-flex items-center p-1 border rounded text-gray-700 hover:bg-gray-200 hover:text-gray-900 focus-visible:outline-none focus-visible:bg-gray-200 focus-visible:text-gray-900"
              >
                {{svg-jar "more" class="h-5 w-5" fill="currentColor"}}
              </button>
            </div>
          </div>
        </div>
      </section>
    </section>
  </main>
</div>
